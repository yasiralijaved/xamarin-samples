<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Expensometer.Core.Views.Tablet.MainPageTablet"
  xmlns:local="clr-namespace:Expensometer.Core.ViewModels;assembly=Expensometer.Core">
    <StackLayout Orientation="Vertical">
        <Label Text="{Binding Message}" VerticalOptions="Center" HorizontalOptions="Center" >
            <Label.BindingContext>
                <local:MainPageViewModel />
            </Label.BindingContext>
        </Label>
    </StackLayout>

</ContentPage>